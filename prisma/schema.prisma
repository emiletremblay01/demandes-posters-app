datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Poster {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    quantity Int?
    @@unique([name])
}

enum Role {
    CHEF_EQUIPE
    EQUIPIER
    DIRECTEUR
}

model Employee {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    role Role
}

model PosterRequest {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    posterTitle String
    employeeName String
    employeeRole Role @default(EQUIPIER)
    isAccepted Boolean @default(false)
    createdAt DateTime @default(now())
}